
<div class="max-w-8xl mx-auto">
    <div class="flex px-4 pt-8 lg:px-8">
        <%= link_to :back, class: "group flex font-semibold text-sm leading-6 text-slate-700 hover:text-slate-900" do %>
            <svg viewBox="0 -9 3 24" class="overflow-visible mr-3 text-slate-400 w-auto h-6 group-hover:text-slate-600"><path d="M3 0L0 3L3 6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path></svg>
            Go back
        <% end %>
    </div>
</div>

<main class="pt-8 pb-16 lg:pt-16 lg:pb-24 bg-white dark:bg-gray-900">
  <div class="flex justify-between px-4 mx-auto max-w-screen-xl ">
      <article class="mx-auto w-full max-w-2xl format format-sm sm:format-base lg:format-lg format-blue dark:format-invert">
          <header class="mb-4 lg:mb-6 not-format">
              <address class="flex items-center mb-6 not-italic">
                  <div class="inline-flex items-center mr-3 text-sm text-gray-900 dark:text-white space-x-2">
                      <%= render(UserIconComponent.new(initial: @post.user.initials, color: @post.user.avatar_color, size: 14)) %>
                      <div>
                          <a href="#" rel="author" class="text-xl font-bold text-gray-900 dark:text-white"><%= @post.user.full_name %></a>
                          <p class="text-base font-light text-gray-500 dark:text-gray-400"><%= @post.user.email %></p>
                          <p class="text-base font-light text-gray-500 dark:text-gray-400"><time pubdate datetime="<%= @post.created_at %>" title="<%= @post.created_at.strftime("%b. %-d, %Y")%>"><%= @post.created_at.strftime("%b. %-d, %Y")%></time></p>
                      </div>
                  </div>
              </address>
              <h1 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white"><%= @post.title %></h1>
          </header>
          <p class="lead"><%= @post.body %></p>
          <section class="mt-6 not-format">
              <div class="flex justify-between items-center mb-6">
                  <h2 class="text-lg lg:text-2xl font-bold text-gray-900 dark:text-white">Discussion (20)</h2>
              </div>
              
              <%= render "form", comment: @comment %>

              <div id="comments" class="mt-6">
                <%= render @comments %>
              </div>

          </section>
      </article>
  </div>
</main>

