<%= render(HeaderComponent.new(title: @group.name)) do %>
  <%= link_to 'Edit this group', edit_group_path(@group), data: { "turbo-frame": "modal" }, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
<% end %>

<main class="mx-auto md:w-full w-full flex">

    <div class="container p-2 sm:p-4 mx-auto">
        <div class="flex flex-row flex-wrap py-4">
            <main role="main" class="w-full sm:w-2/3 md:w-4/7 pt-1 pb-10 px-2">
              <%= render "form", post: @post %>

              <div id="posts" class="mt-6 border-t dark:border-gray-600 min-w-full">
                <%= render @posts %>
              </div>

            </main>
            <aside class="w-full sm:w-1/3 md:w-3/7 px-2 border-l dark:border-gray-600 dark:bg-gray-900">
                <div class="sticky top-0 p-4 rounded-xl w-full">
                  
                  <h2 class="mb-4 text-sm font-semibold text-gray-900 uppercase dark:text-white">Members</h2>
                  
                  <ul class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                    <% @members.each do |member| %>

                      <li>
                          <div class="flex items-center space-x-2">
                            <div class="min-w-0">
                              <%= render(UserIconComponent.new(initial: member.initials, color: member.avatar_color)) %>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm text-gray-800 truncate dark:text-gray-400">
                                  <%= member.full_name %>
                                </p>
                                <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                                  <%= member.email  %> 
                                </p>
                            </div>
                            <div class="inline-flex items-center justify-center text-base font-semibold text-gray-900 dark:text-white">
                                <button type="button" class="text-blue-700 border border-blue-700 hover:bg-blue-700 hover:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-full text-sm p-2.5 text-center inline-flex items-center dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:focus:ring-blue-800">
                                  <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                                  <span class="sr-only">Icon description</span>
                                </button>
                            </div>
                          </div>
                      </li>
                    <% end %>
                  </ul>

                </div>
            </aside>
        </div>
    </div>

</main>
