<%= simple_form_for [@group, post], html: { id: "#{dom_id(post)}_form" } do |form| %>

  <%= form.input :title, label_html: { class: "sr-only" }, placeholder: "Post title"  %>
  <%= form.input :body, as: :text, label_html: { class: "sr-only"}, placeholder: "Post body ...", input_html: { rows: 5 } %>

  <%= form.button :submit %>
<% end %>
